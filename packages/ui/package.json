{
  "name": "@repo/ui",
  "version": "0.0.0",
  "private": true,
  "exports": {
    "./*": "./src/*.tsx"
  },
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc -b && cp ./tailwind.config.js ./dist/tailwind.config.js && cp ./src/globals.css ./dist/globals.css",
    "dev": "tsc -b --watch",
    "lint": "eslint . --max-warnings 0",
    "generate:component": "turbo gen react-component",
    "check-types": "tsc --noEmit"
  },
  "files": [
    "dist", 
    "src/globals.css", 
    "tailwind.config.js" 
  ],
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@turbo/gen": "^2.5.0",
    "@types/node": "^22.15.3",
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.1",
    "eslint": "^9.29.0",
    "tailwindcss": "^4.0.0",
    "typescript": "5.8.2"
  },
  "dependencies": {
    "@radix-ui/react-label": "^2.1.7",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "radix-ui": "^1.4.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-label": "^0.0.6",
    "tailwind-merge": "^3.3.1",
    "tw-animate-css": "^1.3.5"
  }
}
